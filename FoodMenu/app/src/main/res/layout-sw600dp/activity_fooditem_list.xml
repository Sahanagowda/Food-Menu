<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".FoodItemListActivity">

    <!--
    This layout is a two-pane layout for the FoodItems
    master/detail flow.
    
    -->

    <fragment android:id="@+id/fooditem_list"
        android:name="com.cs442.sbasappa_a3.ItemListFragment"
        android:layout_height="match_parent" android:layout_weight="1"
        android:layout_width="0dp"
        tools:layout="@android:layout/list_content"
        />

    <FrameLayout android:id="@+id/fooditem_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="2"
        />
</LinearLayout>
